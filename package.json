{
  "name": "blog-platform",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"npm run start:shell\" \"npm run start:admin\" \"npm run start:user\" \"npm run start:public\"",
    "build": "npm run build:shared && concurrently \"npm run build:shell\" \"npm run build:admin\" \"npm run build:user\" \"npm run build:public\"",
    "build:prod": "npm run build:shared && concurrently \"npm run build:shell:prod\" \"npm run build:admin:prod\" \"npm run build:user:prod\" \"npm run build:public:prod\"",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start:shell": "ng serve shell --port 4200",
    "start:admin": "ng serve admin-panel --port 4201",
    "start:user": "ng serve user-panel --port 4202",
    "start:public": "ng serve public-panel --port 4203",
    "build:shell": "ng build shell",
    "build:admin": "ng build admin-panel",
    "build:user": "ng build user-panel",
    "build:public": "ng build public-panel",
    "build:shell:prod": "ng build shell --configuration production",
    "build:admin:prod": "ng build admin-panel --configuration production",
    "build:user:prod": "ng build user-panel --configuration production",
    "build:public:prod": "ng build public-panel --configuration production",
    "build:shared": "tsc -p shared/tsconfig.json",
    "prebuild": "npm run build:shared"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.2.0",
    "@angular/common": "^17.2.0",
    "@angular/compiler": "^17.2.0",
    "@angular/core": "^17.2.0",
    "@angular/forms": "^17.2.0",
    "@angular/platform-browser": "^17.2.0",
    "@angular/platform-browser-dynamic": "^17.2.0",
    "@angular/router": "^17.2.0",
    "@fortawesome/fontawesome-free": "^6.4.0",
    "bootstrap": "^5.3.0",
    "chart.js": "^4.3.0",
    "ngx-toastr": "^19.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^17.0.0",
    "quill": "^2.0.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-architects/module-federation": "^17.0.0",
    "@angular-devkit/build-angular": "^17.3.17",
    "@angular/cli": "^17.2.0",
    "@angular/compiler-cli": "^17.2.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.3.0"
  }
}
